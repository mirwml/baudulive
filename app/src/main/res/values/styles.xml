<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Control"/>
    <style name="Layout.Dialog" parent="Control">
        <item name="android:padding">16dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView.DialogTitle" parent="Control">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/blackSub</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView.DialogContent" parent="Control">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView.DialogConfirm" parent="Control">
        <item name="android:text">@string/dialog_enter</item>
        <item name="android:padding">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>
    <style name="TextView.DialogCancel" parent="Control">
        <item name="android:text">@string/dialog_cancel</item>
        <item name="android:padding">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>
    <!-- loading 样式 -->
    <style name="loadstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/hint_text</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
